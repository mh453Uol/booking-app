@model BarberBooking.Models.ViewModels.BookingViewModel

    <h3 class="text-center p-2">1. Select a barber</h3>

    @foreach (var resource in Model.Resources)
    {
    <div class="card">
        <div class="card-body">
            <div class="d-flex align-items-center">
                <div class="flex-grow-1">
                    <h5 class="card-title mb-0">@resource.Firstname</h5>
                </div>
                <a class="btn btn-primary" role="button" asp-controller="booking" asp-route-resourceId="@resource.Id">Next</a>
            </div>
        </div>
    </div>
    }